<?xml version="1.0" encoding="utf-8"?>
	<!-- Created by Gustavo Rezende -->
<button>
	<title>Pill 2</title>
	<svg width="150" height="40" viewBox="0 0 150 40">
		<defs>
			<linearGradient id="gradient1" x1=".5" y1="0" x2=".5"
				y2="1">
				<stop id="st1" offset="0%" stop-color="#ffffff" stop-opacity=".5" />
				<stop id="st2" offset="100%" stop-color="#000000" stop-opacity=".5" />
			</linearGradient>
			<linearGradient id="gradient2" x1=".5" y1="0" x2=".5"
				y2="1">
				<stop id="st1" offset="0%" stop-color="#000000" stop-opacity=".5" />
				<stop id="st2" offset="100%" stop-color="#ffffff" stop-opacity=".5" />
			</linearGradient>
			<linearGradient id="gradient3" x1=".5" y1="0" x2=".5"
				y2="1">
				<stop id="st1" offset="0%" stop-color="#ffffff" stop-opacity=".1" />
				<stop id="st2" offset="100%" stop-color="#ffffff" stop-opacity=".7" />
			</linearGradient>
		</defs>
		<rect id="pill" x="2" y="2" rx="20" ry="20" width="146" height="36"
			fill="#A8518A" stroke="url(#gradient2)" stroke-width="2" />
		<rect id="light" x="2" y="2" rx="15" ry="15" width="146" height="36"
			fill="url(#gradient1)" stroke="none" />
		<rect id="reflex" x="6" y="2" rx="10" ry="10" width="135" height="17"
			fill="url(#gradient3)" />
		<text style="text-anchor:middle;dominant-baseline:middle;fill:#000000;stroke:url(#gradiente2);stroke-width:1;stroke-opacity:.8"
			id="text" x="75" y="20">Text</text>
	</svg>
	<parameters>
		<parameter>
			<title>Pill color</title>
			<name>pc</name>
			<type>colour</type>
			<element>pill</element>
			<attribute>fill</attribute>
		</parameter>
		<parameter>
			<title>Text</title>
			<name>tx</name>
			<type>text</type>
			<element>text</element>
		</parameter>
		<parameter>
			<title>Text color</title>
			<name>ct</name>
			<type>colour</type>
			<element>text</element>
			<attribute>fill</attribute>
			<changeable />
			<default-value>
				<highlighted>#400080</highlighted>
				<selected>#ffffff</selected>
			</default-value>
		</parameter>
	</parameters>
	<init-parameter>Text</init-parameter>
	<default-size>
		<element>text</element>
		<width>125</width>
		<height>37</height>
	</default-size>
	<min-size>
		<element>text</element>
		<width>13</width>
		<height>13</height>
	</min-size>
</button>
